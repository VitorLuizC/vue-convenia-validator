{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "importHelpers": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
